{
  "manifest_version": 3,
  "name": "Кинопоиск VIP",
  "version": "1.0",
  "description": "Поиск фильмов на Кинопоиске и Кинопоиск VIP",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://www.kinopoisk.ru/film/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
} 